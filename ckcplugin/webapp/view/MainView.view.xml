<mvc:View 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="dongkuk.custom.plugin.ckcplugin.controller.MainView"
    busyIndicatorDelay="0"
    height="100%">
    <App>
        <Page>
            <headerContent>
                <Button
                    id="idBackButton"
                    visible="false"
                    text="{i18n>template.back.btn}"
                    tooltip="{i18n>template.back.tooltip}"
                    icon="sap-icon://nav-back"
                    press="onBackButtonPress" />
                <ToolbarSpacer />    
                <Title id="headerTitle" text="SAP DMC POD Plugin" />
                <ToolbarSpacer />
                <Button
                    id="closeButton"
                    visible="false"
                    tooltip="{i18n>template.close.tooltip}"
                    icon="sap-icon://decline"
                    press="onClosePress" />
            </headerContent>
            <content>
                <FlexBox justifyContent="Center" alignItems="Center" width="100%" height="50%">
                    <Title text="DMC POD Plugin is Ready!! 22222222"/>
                    <Button text="1" type="Accept" /><Button text="2" type="Reject" />
                </FlexBox>


                <Table id="table" inset="false" headerText="Sample Table">
                    <columns>
                        <Column>
                            <header>
                                <Label text="Column 1"/>
                            </header>
                        </Column>
                        <Column>
                            <header>
                                <Label text="Column 2"/>
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="aa"/>
                                <Text text="bb"/>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <Text text="cc"/>
                                <Text text="dd"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
              
            </content>

        </Page>

    </App>
</mvc:View>